
.changeList{
	width: 100%;
	background: #000000;
	color: #FFFFFF;
	z-index: 19;
	height: 100%;
}
.box{
	background: #222222;
	margin-top: 20rpx;
	padding: 0 10rpx 40rpx 10rpx;
}
.title{
	height: 80rpx;
	line-height: 40px;
	margin-left: 30rpx;
	font-size: 14px;
}
.current-city{
	margin: 0 30rpx;
	font-size: 15px;
	height: 60rpx;
	line-height: 30px;
}
.hotlist{
	width: 100%;
	overflow: hidden;
}
.item{
	width: 30%;
	height: 56rpx;
	line-height: 28px;
	font-size: 13px;
	float: left;
	background: #333333;
	margin-left: 2.5%;
	margin-bottom: 20rpx;
	text-align: center;
	color: #AAAAAA;
}
.now-city{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.box-list{
	padding: 16rpx 10rpx;
}
.initial{
	height: 50rpx;
	line-height: 25px;
	background: #000000;
	padding-left: 20rpx;
	color: #666666;
	font-size: 12px;
}
.city-name{
	background: #222222;
	height: 80rpx;
	line-height: 40px;
	padding-left: 20rpx;
	color: #AAAAAA;
	font-size: 15px;
}
.scrolly{
	height: 100%;
}

